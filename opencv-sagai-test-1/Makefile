SHELL = /bin/bash

TARGET = opencv-sagai-test-1

all: $(TARGET)


cross   =
sysroot =
DESTDIR =
prefix  = /usr/local
bindir  = $(prefix)/bin
incdir  = $(prefix)/include
libdir  = $(prefix)/lib

# DEFINES += -D__STDC_CONSTANT_MACROS -D__STDC_FORMAT_MACROS
INCLUDES+= -I.
SOURCES = $(wildcard *.c *.cc *.cpp *.cxx)
HEADERS = $(wildcard *.h)
MODULES = $(foreach s,$(SOURCES),$(addsuffix .o,$(basename $(s))))


# C preprocessor flags
CPPFLAGS=$(DEFINES) $(INCLUDES)

# C Compiler and flags
CC = $(cross)gcc -std=c11
CFLAGS= -Wall -Wextra -O3 -g

# C++ Compiler and flags
CXX = $(cross)g++ -std=c++11
CXXFLAGS = $(CFLAGS)


# Loader Flags And Libraries
LD=$(CXX)
LDFLAGS = $(CXXFLAGS)

# STRIP = $(cross)strip --strip-all
STRIP = @echo "don't strip "

LDLIBS += -lopencv_highgui -lopencv_video -lopencv_videoio -lopencv_imgproc -lopencv_imgcodecs -lopencv_core -lstdc++
#  -lopencv_tracking 

#########################################


$(MODULES): $(HEADERS) Makefile
$(TARGET) : $(MODULES) Makefile
	$(LD) $(LDFLAGS)  $(MODULES) $(LDLIBS) -o $@

clean:
	$(RM) $(MODULES)

distclean: clean
	$(RM) $(TARGET)

install: $(TARGET) $(DESTDIR)/$(bindir)
	$(STRIP) --strip-all $(TARGET) && cp $(TARGET) $(DESTDIR)/$(bindir)

uninstall:
	$(RM) $(DESTDIR)/$(bindir)/$(TARGET)


$(DESTDIR)/$(bindir):
	mkdir -p $@
